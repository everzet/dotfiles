[include]
    path = credentials

[push]
    default = current

[core]
    pager = delta
    quotepath = false

[interactive]
    diffFilter = delta --color-only --features=interactive
    singlekey = true

[url "git://github.com/"]
    insteadOf = gh:

[url "git@github.com:"]
    insteadOf = wgh:

[color]
    branch = auto
    diff   = auto
    status = auto

[apply]
    whitespace = nowarn

[alias]
    s  = status -s
    a  = add
    c  = commit -v
    ca = commit -av
    u  = reset HEAD

    b  = branch
    bn = checkout -b
    co = checkout

    d  = diff
    dt = difftool
    dc = difftool --cached
    m  = mergetool

    l = log --oneline --graph
    t = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[commit]
    gpgsign = true

[pull]
    rebase = true

[init]
    defaultBranch = main

[diff]
    tool = Kaleidoscope
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
    prompt = false

[merge]
    tool = Kaleidoscope
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool]
    prompt = false

[delta]
    features = decorations
    line-numbers = true
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = bold yellow ul
    file-style = bold yellow ul
    hunk-header-decoration-style = yellow box
    hunk-header-file-style = orange
    hunk-header-line-number-style = blue
    hunk-header-style = file line-number syntax
